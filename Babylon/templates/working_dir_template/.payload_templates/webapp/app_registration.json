{
    "displayName": "${app_name}",
    "signInAudience": "AzureADMyOrg",
    "spa": {
        "redirectUris": [
            "http://localhost:3000/scenario",
            "http://localhost:3000/sign-in",
            "https://${deploy['webapp_static_domain']}/scenario",
            "https://${deploy['webapp_static_domain']}/sign-in",
            % if deploy.get('webapp_domain'):
            "https://${deploy['webapp_domain']}/scenario",
            "https://${deploy['webapp_domain']}/sign-in"
            % endif
        ]
    },
    "requiredResourceAccess": [
        % if platform.get('csm_platform_app_id'):
        {
            "resourceAppId": "${platform['csm_platform_app_id']}",
            "resourceAccess": [
                {
                    "id": "${platform['csm_platform_scope_id']}",
                    "type": "Scope"
                }
            ]
        }
        % endif
    ]
}